@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    var count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">YapılacaklarListesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılackalarla ilgili işleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İçerik</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date</td>
                                        @if (item.Status==true)
                                        {
                                            <td><a href="/ToDoList/ChangeStatusToFalse/@item.ToDoListId/" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeStatusToTrue/@item.ToDoListId/" class="btn btn-info">Yapıldı Olarak İşaretle</a></td>
                                        }
                                        <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId/" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId/" class="btn btn-danger">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/ToDoList/CreateToDoList/" class="btn btn-warning">Yeni Yapılacak İşlem Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>