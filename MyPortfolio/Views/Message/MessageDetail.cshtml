@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <b>Gönderen:</b>@Model.NameSurname
                        <br />
                        <b>Email:</b>@Model.Email
                        <br />
                        <b>Tarih:</b>@Model.SendDate
                        <br />
                        <br />
                        <b>Mesaj:</b>@Model.MessageDeail
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>